@model Customer

<div class="card shadom border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3"></div>
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Customer</h2>
        </div>
    </div>

    <div class="card-body p-4">
        <h1>Delete Customer</h1>
        <form method="post">
            <input asp-for="Id" hidden/>
            <div class="border p-3 shadow-sm">

                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Name" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Name" class="ms-2"></label>
                  
                </div>

                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Surname" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Surname" class="ms-2"></label>
              
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="City" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="City" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="District" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="District" class="ms-2"></label>
                 
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Address" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Address" class="ms-2"></label>
                
                </div>

                <br />
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-primary form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
