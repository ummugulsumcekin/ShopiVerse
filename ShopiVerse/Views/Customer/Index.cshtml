@model List<Customer>

<div class="card shadom border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Customer List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row  pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Create New Customer
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        District
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Name))
                {
                    <tr>

                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Surname
                        </td>
                        <td>
                            @obj.City
                        </td>
                        <td>
                            @obj.District
                        </td>
                        <td>
                            @obj.Address
                        </td>


                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>